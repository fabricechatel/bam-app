<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="bamUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>com.bam.entity.Adresse</class>
		<class>com.bam.entity.Article</class>
		<class>com.bam.entity.Caracteristique</class>
		<class>com.bam.entity.Categorie</class>
		<class>com.bam.entity.Client</class>
		<class>com.bam.entity.Commande</class>
		<class>com.bam.entity.Commentaire</class>
		<class>com.bam.entity.Fiche</class>
		<class>com.bam.entity.LiensCommandeAdresse</class>
		<class>com.bam.entity.LiensCommandeAdressePK</class>
		<class>com.bam.entity.LiensPanierArticle</class>
		<class>com.bam.entity.LiensPanierArticlePK</class>
		<class>com.bam.entity.LiensUtilisateurRole</class>
		<class>com.bam.entity.LiensUtilisateurRolePK</class>
		<class>com.bam.entity.LigneCommande</class>
		<class>com.bam.entity.LigneCommandePK</class>
		<class>com.bam.entity.Message</class>
		<class>com.bam.entity.Panier</class>
		<class>com.bam.entity.Promotion</class>
		<class>com.bam.entity.Utilisateur</class>
		<class>com.bam.entity.UtilisateurRole</class>
		<class>com.bam.entity.Role</class>
		
		<properties>
		    <property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>
</persistence>
